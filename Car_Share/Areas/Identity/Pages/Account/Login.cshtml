@page "/Login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="jumbotron">
    <div class="row justify-content-center text-center">
        <h1 class="display-1">CarShare </h1>
        <p class="lead text-left mt-3">
            Welcome to CarShare<br />
        </p>
    </div>
    <hr />
    <div class="row justify-content-center">
        <section class="text-center">
            <h3>@ViewData["Title"]</h3>
            <form id="account" method="post">
                <hr />
                <span class="text-danger">@Model.ErrorMessage</span>
                <div class="form-group">
                    <label asp-for="Input.LoginID" class="float-left"></label>
                    <input asp-for="Input.LoginID" class="form-control" />
                    <span asp-validation-for="Input.LoginID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="float-left"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
                <p>
                    <a class="small text-muted" href="/Login/Admin" >Admin login</a>
                </p>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}